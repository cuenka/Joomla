<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="2.5" type="template" client="site" method="upgrade">
	
	<name>Jose Cuenca</name><!-- name the template -->
	<creationDate>2014-02-01</creationDate><!-- the date your are beginn to code -->
	<author>Jose Cuenca</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© xxxx example.com</copyright><!-- for who you are coding -->
	<authorEmail>your.name@example.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.example.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>frontend</h1>
		<p>Created by <a href="http://www.example.com" target="_blank">your name | example.com</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>preparation.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<languages folder="language"><!-- no need to change -->
		<language tag="en-GB">en-GB.tpl_frontend.ini</language>
	</languages>
	
	<positions><!-- define the positions for modules here -->
		<position>debug</position>
	</positions>
	
	<config><!-- no need to change -->
		<fields name="params">

			<fieldset name="basic">

				<!-- MODERNIZR-->
				<field name="modernizr" type="radio" default="0" 
					label="TPL_FRONTEND_PARAMETER_MODERNIZR_LABEL" 
					description="TPL_FRONTEND_PARAMETER_MODERNIZR_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- CSS METHOD -->
				<field name="css" type="radio" default="css" 
					label="TPL_FRONTEND_PARAMETER_CSS_LABEL" 
					description="TPL_FRONTEND_PARAMETER_CSS_DESC">
					<option value="CDN">CDN Bootstrap CSS + custom.css</option>
					<option value="SERVER">SERVER Bootstrap CSS + custom.css</option>
					<option value="JOOMLA">Joomla default CSS</option>
					<option value="MANUAL">ADD CSS MANUALLY</option>
				</field>

				<!-- BOOTSTRAP -->
				<field name="bootstrap" type="radio" default="0" 
					label="TPL_FRONTEND_PARAMETER_BOOTSTRAP_LABEL" 
					description="TPL_FRONTEND_PARAMETER_BOOTSTRAP_DESC">
					<option value="CDN">CDN Bootstrap option</option>
					<option value="SERVER">Bootstrap form server</option>
					<option value="JOOMLA">Joomla Bootstrap</option>
					<option value="NO">Don't load Bootstrap</option>
				</field>

				<!-- FONT-AWESOME -->
				<field name="fontawesome" type="radio" default="0" 
					label="TPL_FRONTEND_PARAMETER_FONTAWESOME_LABEL" 
					description="TPL_FRONTEND_PARAMETER_FONTAWESOME_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<!-- JQUERY -->
				<field name="jquery" type="radio" default="0" 
					label="TPL_FRONTEND_PARAMETER_JQUERY_LABEL" 
					description="TPL_FRONTEND_PARAMETER_JQUERY_DESC">
					<option value="CDN">CDN JQUERY option</option>
					<option value="SERVER">JQUERY form server</option>
					<option value="JOOMLA">Joomla JQUERY default option</option>
					<option value="NO">Don't load JQUERY</option>
				</field>


				<!-- GOOGLE FONT-->
                <field name="googlefont" type="text" default=""
                	label="TPL_FRONTEND_PARAMETER_GOOGLEFONT_LABEL"
                	description="TPL_FRONTEND_PARAMETER_GOOGLEFONT_DESC">
				</field>

			</fieldset>
			
			<fieldset name="advanced">
			
		
				<!-- MODERNIZR-->

				<field name="mootools" type="radio" default="0" 

						label="TPL_FRONTEND_PARAMETER_MOOTOOLS_LABEL" 

						description="TPL_FRONTEND_PARAMETER_MOOTOOLS_DESC">
		
						<option value="0">JNO</option>

						<option value="1">JYES</option>
	
				</field>
				<field
					name="mootoolsItemids"
					type="text"
					default="9999"
					label="TPL_FRONTEND_FIELD_MOOTOOLS_ITEMIDS_LABEL"
					description="TPL_FRONTEND_FIELD_MOOTOOLS_ITEMIDS_DESC"
				/>
				<field
					name="editingMootools"
					type="radio"
					default="1"
					label="TPL_FRONTEND_FIELD_LOAD_EDITING_MOOTOOLS_LABEL"
					description="TPL_FRONTEND_FIELD_LOAD_EDITING_MOOTOOLS_DESC">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				<!-- Disable JavaScript -->	
				<field name="disablejs" type="radio" default="0" 
					label="TPL_FRONTEND_PARAMETER_DISABLEJS_LABEL" 
					description="TPL_FRONTEND_PARAMETER_DISABLEJS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field> 

				<!-- JavaScript Files -->
				<field name="nojs" type="textarea" 
					label="TPL_FRONTEND_PARAMETER_FNJS_LABEL" 
					description="TPL_FRONTEND_PARAMETER_FNJS_LABEL" 
					cols="30" default="mootools-core.js,caption.js" rows="4" />

				<!-- Disable CSS -->
				<field name="disablecss" type="radio" default="0" 
					label="TPL_FRONTEND_PARAMETER_DISABLECSS_LABEL" 
					description="TPL_FRONTEND_PARAMETER_DISABLECSS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
				</field>

				<!-- CSS Files -->
				<field name="nocss" type="textarea" 
					label="TPL_FRONTEND_PARAMETER_FNCSS_LABEL" 
					description="TPL_FRONTEND_PARAMETER_FNCSS_DESC" 
					cols="30" rows="4" />

			</fieldset>
		</fields>
	</config>
	
</extension>
