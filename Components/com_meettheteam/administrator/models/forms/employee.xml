            label="COM_MEETTHETEAM_FORM_LBL_EMPLOYEE_JOBDESCRIPTION"
            description="COM_MEETTHETEAM_FORM_DESC_EMPLOYEE_JOBDESCRIPTION" 

                

                

                
            cols="25"
            rows="5"
             /> 

       <field name="photo" type="media"

                
            label="COM_MEETTHETEAM_FORM_LBL_EMPLOYEE_PHOTO"
            description="COM_MEETTHETEAM_FORM_DESC_EMPLOYEE_PHOTO" 

                

                

                
            directory="meettheteam" /> 

         <field

        name="state"

        type="list"

        label="JSTATUS"

        description="JFIELD_PUBLISHED_DESC"

        class="inputbox"

        size="1"

        default="1">

        <option value="1">JPUBLISHED</option>

        <option value="0">JUNPUBLISHED</option>

    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />

        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

