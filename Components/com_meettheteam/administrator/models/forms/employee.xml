<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_MEETTHETEAM_FORM_LBL_EMPLOYEE_ID"

            readonly="true" class="readonly"

            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_MEETTHETEAM_FORM_LBL_EMPLOYEE_CREATED_BY"
            description="COM_MEETTHETEAM_FORM_DESC_EMPLOYEE_CREATED_BY"  /> 

       <field name="name" type="text"

                
            label="COM_MEETTHETEAM_FORM_LBL_EMPLOYEE_NAME"
            description="COM_MEETTHETEAM_FORM_DESC_EMPLOYEE_NAME" 

                

                

                 required="true" 
            class="meettheteam_Name"
            filter="safehtml"
            size="60"
            maxlength="60" /> 

       <field name="position" type="text"

                
            label="COM_MEETTHETEAM_FORM_LBL_EMPLOYEE_POSITION"
            description="COM_MEETTHETEAM_FORM_DESC_EMPLOYEE_POSITION" 

                

                

                
